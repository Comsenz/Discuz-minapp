/* 选学校 */
view,input{
  box-sizing:border-box;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.sele_box{
  font-weight: 400;
  font-size: 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height:100%;
  z-index: 99;
}
.sele_box .ceng{
  width: 100%;
  height:100%;
  background-color: rgba(0,0,0,0.4);
}
.active.sele_box .ceng{
  animation: fadein1 0.2s;
}
.active.sele_box .content{
  animation: fadein2 0.2s;
}
@keyframes fadein1 {
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}
@keyframes fadein2 {
  from{
    height: 0;
  }
  to{
    height: 50%;
  }
}
.sele_box .content{
  position: absolute;
  left: 0;
  bottom:0;
  width: 100%;
  height: 50%;
  text-align: left;
  background-color: #fff;
}
.sele_box .top{
  overflow: hidden;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding:0 30rpx;
}
.sele_box .top .fr{
  color: #5ABF39
}

.sele_box  .sea_box{
  height: 81rpx;
  padding: 4rpx 30rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}
.sele_box  .sea_bar{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  background: url('http://static.qr.cntv.cn/2018hb/class/search.png') no-repeat 20rpx center/25rpx 25rpx #EDEDEF;
  padding-left: 60rpx;
}
.sele_box  .sch_list{
  height:calc(100% - 171rpx);
  overflow: auto;
  padding-bottom: 30rpx;
}
.sele_box  .sch_item1{
  color: #5ABF39;
}
.sele_box  .sch_item1 .fr{
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 44rpx;
}
.sele_box  .sch_item{
  overflow: hidden;
  padding: 27rpx 30rpx 27rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
  line-height: 44rpx;
}
.sele_box  .sch_item2 .fl{
  width: 600rpx;
  white-space: normal;
}
.sele_box  .sch_item2 .fr{
  width: 44rpx;
  height: 44rpx;
  border:1rpx solid #bbb;
  border-radius: 50%;
}
.sele_box  .sch_item2.active .fr{
  border-color: #5abf39;
}
.sele_box  .sch_item2.active .fr view{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #5abf39;
  margin:11rpx auto 0;
}