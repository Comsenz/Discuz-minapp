/* component/secode/secode.wxss */
.Mask {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color:#000;background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.maskContain {
  position:relative;
  width: 650rpx;
  border-radius: 10rpx;
  margin:200rpx auto;
  text-align: center;
  overflow:hidden;
  background: white;
  padding:50rpx;
}
.codeView {
  display: flex;
  justify-content: space-between;
}
.secodeImg {
  display: block;
  width: 260rpx;
  height: 80rpx;
  background: #eeeeee;
}

.getcode {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #4b89ef;
  text-align: center;
}

.weui-input {
  height: 90rpx;
  width: 100%;
  margin-top: 50rpx;
  font-size:28rpx;
  border: 1rpx solid #e1e1e1;
  border-radius: 45rpx;
}

.subtn {
  height: 90rpx;
  color: white;
  background: #5abf39;
  margin-top: 50rpx;
  border-radius: 45rpx;
}