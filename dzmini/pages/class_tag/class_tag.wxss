/* 滑动删除 */
view{
  box-sizing:border-box;
}
.slide_box{
  margin-top: 30rpx;
  border-top:1rpx solid #d9d9d9;
  border-bottom:1rpx solid #d9d9d9;
  background-color: #fff;
  overflow: auto;
  padding-left: 30rpx;
}
.slide_item{
  border-bottom: 1rpx solid #D9D9D9;
  height: 89rpx;
  overflow: hidden;
}
.slide_cell{
  width: 852rpx;
  height: 100%;
}
.slide_item:last-child{
  border-bottom: 0;
}
.slide_for{
  height: 100%;
  width: 60rpx;
}
.slide_close{
  background: url('http://static.qr.cntv.cn/2018hb/class/close.png') no-repeat left center/40rpx 40rpx;
}
.slide_new_add{
  background: url('http://static.qr.cntv.cn/2018hb/class/new_add.png') no-repeat left center/40rpx 40rpx;
}
.slide_sub{
  width: 660rpx;
  height: 100%;
  line-height: 88rpx;
}
input.slide_sub{
  width: 270rpx;
  margin-right: 30rpx;
  text-align: center
}
.slide_del{
  width: 130rpx;
  height: 100%;
  line-height: 88rpx;
  background-color: #E2473C;
  color: #fff;
  text-align: center;
}

.remove_ani{
  animation: remove_ani 0.4s forwards;
}
@keyframes remove_ani{
  from{
    margin-left: 0
  }
  to{
    margin-left: -130rpx
  }
}