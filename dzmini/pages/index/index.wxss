/**index.wxss**/
page{
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
}
view,input,textarea,image,text,button,scroll-view{
  box-sizing: border-box;
}

.l_group{
  width:100rpx;
  height:100rpx;
  border-radius: 7rpx;
  background-color: #E6E6E6;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap-reverse;
  justify-content: center;
  align-items: center;
  overflow:hidden;
}
.l_head1{
  width: 100%;
  height: 100%;
}
.l_head2{
  width: 42%;
  height: 42%;
  margin: 3%;
}
.l_head5{
  width: 27%;
  height: 27%;
  margin: 3%;
}
.l_group image{
  width: 100%;
  height: 100%;
  display: block;
}

.container{
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
}
.nav {
    height: 210rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    background: #f7f7f7;
    font-size: 12px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
    color: #999999;
    font-weight: 400;
}
.navSetIcon {
  width:35rpx;
  height:35rpx;
  position:absolute;
  left:100rpx;
  top: -10rpx;
}
.navPosIcon {
  width:45rpx;
  height:45rpx;
  position:absolute;
  top:88rpx;
  left:100rpx;

}
.nav-item.active{
    color: #595959;
    font-weight: 500;
}

.nav-item.active .nav-item-image {
  width: 110rpx;
  height: 110rpx;
  margin-top: 6rpx;
  border-radius: 20rpx;
}

.nav-item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}

.blur {	
  opacity:0.4;
}

.borderShowdow {
  box-shadow:0 0 15rpx 2rpx rgba(0,0,0,0.1);
}
.nav-image-contain {
  display: flex;
}
.nav-item.active .nav-image-contain {
  margin-top: 30rpx;
  border-radius: 30rpx;
  border-style:solid;
  border-width: 5rpx;
  border-color: #5abf39;
  display:inline-block;
  width: 130rpx;
  height: 130rpx;
  position: relative;
}

.grouplistAvatar {
  margin:25rpx 20rpx 25rpx 25rpx;
}

.navAvatar .l_group {
  border-radius: 20rpx;
}
.navAvatar {
  margin: 12rpx auto;
}
.nav-item.active .navAvatar {
  width: 110rpx;
  height: 110rpx;
  margin-top: 6rpx;
}
.nav-item.active .l_group {
  width: 110rpx;
  height: 110rpx;
}

.nav-item-text {
  margin-top: 10rpx;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
}

.tab-box{
    background: #f8f8f8;
    padding-top: 215rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}

scroll-view {
  width: 100%;
  height: 98%;/*动态高度*/
  justify-content: center;
  align-items: center;
  display: flex;
  /* padding:0 15px; */
}
.pointView {
  width:28rpx;
  height: 28rpx;
  position: absolute;
  top: -20rpx;
  left: 75rpx;
  z-index: 1;
}
.mainView {
  margin: 0 30rpx;
  position: relative;
}

.addClass {
  width: 100rpx;
  height: 100rpx;
}

.createclass {
  color: #5abf39;
}

/* 首页消息 */
.InfoBg {
  width: 100%;
  height: 330rpx;
  background-color: white;
  text-align: center;
  border-radius: 15rpx;
  margin-top: 20rpx;
  padding:30rpx 0;

}

.InfoBg image {
  width: 66%;
  height: auto;
}

.infoTitle {
  color: #666666;
  font-size: 24rpx;
}

.info_detail {
  display: flex;
  color: #666666;
  font-size: 24rpx;
  padding:15rpx 0 5rpx 0;
  justify-content:center;
}

.info_detail_infonumber {
  color: #303030;
  margin-left:15rpx;
  font-weight:600;
  line-height: 1.6
}

.info_first {
  margin-left:0;
}

.tipView {
  background-color: #5c5c5c;
  color: white;
  font-size: 20rpx;
  overflow:hidden;/*超出一行文字自动隐藏 */
  text-overflow:ellipsis;/*文字隐藏后添加省略号*/
  white-space:nowrap; /*强制不换行 */
  display:inline-block;
  padding:2rpx 15rpx;

}

.groupList {
  margin: 24rpx 0;
  width: 100%;
  height: auto;
  background-color: white;
  border-radius: 20rpx;
}

/* 首页cell */
.groupCell {
  display: flex;
}
.cell-avatar {
  width: 100rpx;
  height: 100rpx;
  margin:20rpx 25rpx;
  border-radius:10rpx;
}

.cell-messageView {
  width: 430rpx;
}
.cell-title {
  font-size:30rpx;
  line-height:1.4;
  margin-bottom:8rpx;
  margin-top: 25rpx;
  color:black;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.cell-school {
  font-size:24rpx;
  color:black;
  line-height:1.4;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.cell-message {
  font-size:24rpx;
  color:#888;
  line-height:1.4;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:3;
  display:-webkit-box;
  -webkit-box-orient:vertical;
}

.group-join {
  background-color: #5ABF39;
  color: white;
  font-size: 22rpx;
  text-align: center;
  width: 85rpx;
  height: 50rpx;
  border-radius: 26rpx;
  margin-left: 10rpx;
  margin-top: 60rpx;
  line-height: 46rpx;
}

.group-enter {
  color: #5ABF39;
  background-color:white;
  border-bottom-color: #5ABF39;
  border-width: 2rpx;
  border-style:solid;
}

/* 发布 */
.postEnter {
  position:fixed;
  background-color:#5abf39;
  width:120rpx;
  height:120rpx;
  border-radius:60rpx;
  bottom:105rpx;
  right:55rpx;
  color:white;
  text-align:center;
  line-height:120rpx;
  font:34rpx;
}

@import "../common_temp/audio_player.wxss";

#myVideo {
  width: 0rpx;
  height: 0rpx;
}

.audioMask {
  position: absolute;
  top: -0px;
  left: -0px;
  width: 100%;
  height: 905px;

  background-color:#000;background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
}
.recordView {
  position: relative;
  display: flex;
  width: 650rpx;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background:#f4f4f4;
  border: 1px solid #e1e1e1c0;
  margin: 0 auto;
  height: 120rpx;
  top: 300px;
}

.record-close {
  width: 120rpx;
  height:64rpx;
  margin-top: 10rpx;
}
.record-time {
  margin-top: 15rpx;
  width: 280rpx;
  height:64rpx;
  text-align: left;
  margin-left:15rpx;
  color: red;
}
.record-icon {
  margin: 0 20rpx;
  width: 90rpx;
  height: 90rpx;
}

.record-finish {
  margin-top: 15rpx;
  width: 88rpx;
  color: #6199fd;
}

.shareMask {
  position: fixed;
  top: -0px;
  left: -0px;
  width: 100%;
  height: 905px;

  background-color:#000;background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
}
.shareContain {
  position:relative;
  width: 585rpx;
  height: 810rpx;
  background-color: white;
  border-radius: 10rpx;
  margin:216rpx auto;
  text-align: center;
}
.shareCover {
  width: 585rpx;
  height: 455rpx;
  margin: 0 auto;
}
.closeView {
  float: right;
  top:10rpx;
  right:10rpx;
  width:100rpx;
  height:100rpx;
  position:absolute;
}
.close {
  width: 48rpx;
  height: 48rpx;
  margin-left:50rpx;
}
.shareTitle {
  font-size: 34rpx;
  margin: 0 50rpx;
  line-height: 1.4;
}
.shareContent {
  font-size: 30rpx;
  color: #888888;
  margin:0rpx 40rpx 30rpx;
  line-height:1.4;
}
.shareBtn {
  margin: 0 30rpx;
}

.noMoreView {
  text-align: center;
  color: #999999;
  font-size: 24rpx;
  margin-top: 30rpx;
  height: 200rpx;
}

.emptyView {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin:  0 90rpx;

}
.emptyView image {
  display: block;
  width: 349rpx;
  height: 261rpx;
  margin: 110rpx auto 30rpx;
}
.emptyView text{
  color: #3973db;
}
.emptyMsg {
  padding-bottom: 150rpx;
  width:410rpx;
  margin:0 auto;
}

.header {
  width: 100%;
  display: flex;
  align-items: center;
  color: #999999;
  height: 50rpx;
  font-size: 24rpx;
}

.headerShow {
  margin: 0 auto;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.welcomeContain {
  position:relative;
  width: 585rpx;
  height: 645rpx;
  background-color: white;
  border-radius: 10rpx;
  margin:216rpx auto;
  text-align: center;
}

.welcomeCover {
  margin: 30rpx 40rpx;
  width:505rpx;
  height:378rpx;

}

.welcomeBtn {
  color: #5abf39;
  background-color: white;
  height:98rpx;
  line-height:3;
}