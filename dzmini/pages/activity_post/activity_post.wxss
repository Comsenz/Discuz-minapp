/* pages/activity_post/activity_post.wxss */
page {
  background: #f8f8f8;
}

view,input,textarea,image,text,button,scroll-view{
  box-sizing: border-box;
}

.classTypeView {
  display: flex;
  border-bottom:1px solid #e1e1e1c0;
}
.classType {
  width:170rpx;
  height:78rpx;
  line-height:78rpx;
  padding-left:30rpx;
  background:url('http://static.qr.cntv.cn/2018hb/class/down.png') no-repeat 160rpx center/22rpx 13rpx #fff;
  color:#333333;
  font-size:30rpx;
  border:1rpx solid #e1e1e1;
  border-radius:15rpx;
  margin-right: 15rpx;
}

.activity-type-c {
  display:flex;
  padding:20rpx 0;
  align-items:center;
  font-size: 30rpx;
}

.time-tip {
  width:150rpx;
  font-size:30rpx;
  line-height: 82rpx;
}
.activity-tip {
  font-size:34rpx;
  margin-left: 30rpx;
}

.dateType {
  width:300rpx;
  height:78rpx;
  line-height:78rpx;
  padding-left:30rpx;
  background:url('http://static.qr.cntv.cn/2018hb/class/down.png') no-repeat 90% center/22rpx 13rpx #fff;
  color:#333333;
  font-size:30rpx;
  border:1rpx solid #e1e1e1;
  border-radius:15rpx;
  margin-right: 15rpx;
}
.teachTime {
  margin-left:30rpx;
  padding:30rpx 0;
}
.tt_title {
  margin:15rpx 0;
  font-size:34rpx;
  color:#333333;
}
.tt_pickercontent {
  display: flex;
  margin-top: 30rpx;
}
.zhi {
  font-size: 30rpx;
  color: #333333;
  line-height: 78rpx;
  margin-right: 15rpx;
}
.easyInput {
  width: 720rpx;
  font-size:30rpx;
  border-bottom:0.5px solid #e1e1e1c0;
  margin-left:30rpx;
  height: 100rpx;
}
.detailText {
  height: 300rpx;
  width: 100%;
  font-size: 30rpx;
  padding: 30rpx;
  color: #333333;
}

.attachmentContain {
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  overflow:hidden;

}
.uploader__bd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.uploader__files {
  display: flex;
  flex-wrap:wrap;
}
.uploader__file {
  margin-bottom:20rpx;
  position: relative;
}

.uploader__img {
  display: block;
  width: 175rpx;
  height: 175rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.uploader__input {
  width:175rpx;
  height:175rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.postBtn {
  margin: 50rpx 30rpx;
  border-radius:40rpx;
}

.deleteA {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: -10rpx;
}

.att-tip {
  margin: 15rpx 0;
  color: #888888;
  font-size: 24rpx;
}

.weui-cell {
  font-size: 34rpx;
  color: #333333;
}

.instru-more {
  color: #888888;
}

.section1 {
  background: white;
  margin-top: 15rpx;
  border-top: 1rpx solid #e1e1e1;
  border-bottom:1rpx solid #e1e1e1;
}
.logo{
  width:100%;
  height: 100%;
}
.img_box{
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  border:1rpx solid #e1e1e1;
  overflow: hidden;
  float: right;
}

.weui-cell__ft{
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-cell{
  font-size: 32rpx;
  padding: 21rpx 30rpx;
}
.picker-cell {
  border-top:1rpx solid #e1e1e1;
  margin-left: 30rpx;
  padding-left: 0rpx;
}
.weui-cell__ft_in-access{
  min-height: 44rpx;
}
.no-select {
  color: #888888;
}