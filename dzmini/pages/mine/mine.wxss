/* pages/mine/mine.wxss */

page {
  background-color: #efeef3;
}

view, input, textarea, image, text, button, scroll-view {
  box-sizing: border-box;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

page {
  width: 100%;
  height: 100%;
}

.row {
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

.ell {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.l_main {
  font-size: 32rpx;
  width: 100%;
  line-height: 1;
  color: #000;
  position: relative;
}

.mi_top {
  height: 188rpx;
  padding: 32rpx 30rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.mi_head {
  height: 108rpx;
  width: 108rpx;
  border: 1rpx solid #e1e1e1;
  border-radius: 10rpx;
  margin-right: 22rpx;
  overflow: hidden;
}

.mi_head image {
  width: 100%;
  height: 100%;
}

.mi_nick {
  padding: 7rpx 0 32rpx;
  width: 400rpx;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
}

.label_item {
  float: left;
  border-radius: 17rpx;
  font-size: 21rpx;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 10rpx;
  margin-right: 15rpx;
  color: #fff;
  margin-top: 20rpx;
}

.label_item1 {
  float: right;
  width:20rpx;
  height:30rpx;
  margin-top: 30rpx;
 } 

.label_guan {
  background-color: #ff6c00;
}

.label_lao {
  background-color: #ea9a7f;
}

.label_jia {
  background-color: #fc0;
}

.mi_right {
  height: 100%;
  width: 100rpx;
  background: url('http://static.qr.cntv.cn/2018hb/class/right.png') no-repeat right 30rpx/16rpx 25rpx;
}

.mi_block {
  margin-top: 30rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  padding-left: 30rpx;
  background-color: #fff;
}

.mi_item {
  overflow: hidden;
  height: 97rpx;
}

.mi_icon {
  float: left;
  height: 100%;
  width: 42rpx;
}

.mi_image {
  width: 50rpx;
}

.icon_coll {
  background: url('http://static.qr.cntv.cn/2018hb/class/coll.png') no-repeat center center/41rpx 39rpx;
}

.icon_task {
  background: url('http://static.qr.cntv.cn/2018hb/class/task.png') no-repeat center center/40rpx 34rpx;
}

.icon_pos {
  background: url('http://static.qr.cntv.cn/2018hb/class/pos.png') no-repeat center center/33rpx 40rpx;
}

.icon_school {
  background: url('http://static.qr.cntv.cn/2018hb/class/school.png') no-repeat center center/39rpx 40rpx;
}

.icon_num {
  background: url('http://static.qr.cntv.cn/2018hb/class/num.png') no-repeat center center/40rpx 40rpx;
}

.icon_reply {
  background: url('http://static.qr.cntv.cn/2018hb/class/reply.png') no-repeat center center/40rpx 40rpx;
}

.icon_score {
  background: url('http://static.qr.cntv.cn/2018hb/class/score.png') no-repeat center center/40rpx 42rpx;
}

.mi_bar {
  border-bottom: 1rpx solid #e5e5e5;
  width: 660rpx;
  height: 97rpx;
  line-height: 97rpx;
  padding-right: 30rpx;
}

.bar_right {
  background: url('http://static.qr.cntv.cn/2018hb/class/right.png') no-repeat 615rpx/16rpx 25rpx;
}

.mi_bar .fr {
  color: #999;
}

.mi_item:last-child .mi_bar {
  border-bottom: 0;
}

.switchUser {
  background-color: white;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #979797;
  margin-top: 30rpx;
}
